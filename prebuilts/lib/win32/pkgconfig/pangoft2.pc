prefix=/mingw64
libdir=${prefix}/lib
includedir=${prefix}/include

Name: Pango FT2 and Pango Fc
Description: Freetype 2.0 and fontconfig font support for Pango
Version: 1.48.7
Requires: pango, freetype2, fontconfig >=  2.11.91
Requires.private: glib-2.0 >=  2.62, gobject-2.0 >=  2.62, gio-2.0 >=  2.62, fribidi >=  0.19.7, libthai >=  0.1.9, harfbuzz >=  2.0.0, cairo >=  1.12.10, harfbuzz-gobject >=  2.0.0
Libs: -L${libdir} -lpangoft2-1.0
Libs.private: -lm
Cflags: -I${includedir}/pango-1.0
